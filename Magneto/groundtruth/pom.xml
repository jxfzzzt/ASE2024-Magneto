    <groupId>com.magneto</groupId>
    <artifactId>testcase-trigger</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>
    <name>groundtruth</name>
    <url>http://www.se.fudan.edu.cn/</url>

