        <module>CVE-2020-13973</module>
        <module>CVE-2021-23899</module>
        <module>CVE-2021-23900</module>
        <module>CVE-2021-27568</module>
        <module>CVE-2022-23596</module>
        <module>CVE-2018-1002201</module>
        <module>CVE-2017-7957</module>
        <module>CVE-2020-26217</module>
        <module>CVE-2021-43859</module>
        <module>Zip4j-263</module>
